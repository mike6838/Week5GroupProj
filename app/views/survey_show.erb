<div class='question'>
  <h1><%= @survey.title %></h1>
  <h3><%= @survey.description %></h3>
  <form id="take_survey" action="/surveys/<%= @survey.id %>/take" method="post">
  <ol>
    <% @survey.questions.each do |question| %>
    <li><%= question.question_str %></li>
    <%= erb :_choices, locals: {question: question} %>
    <% end %>
  <input type="submit" name="submitradio" value="Submit">
  </ol>
  </form>
</div>




