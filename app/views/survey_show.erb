<div class='question'>
  <h1><%= @survey.title %></h1>
  <h3><%= @survey.description %></h3>
  <ol>
  <% @survey.questions.each do |question| %>
    <li><%= question.question_str %></li>
    <% question.choices.each do |choice| %>
      <ul>
        <li><%= choice.choice_str %></li>
      </ul>
     <% end %>
  <% end %>
  </ol>
</div>